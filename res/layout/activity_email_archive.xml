<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="emailSelection"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.ejlo.todolistforandroid.EmailArchiveActivity" >

    <Button
        android:id="@+id/EmailArchSelectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="emailSelection"
        android:text="@string/email_selection" />

    <ListView
        android:id="@+id/emailArchiveListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EmailArchSelectionButton"
        android:layout_alignLeft="@+id/EmailArchSelectionButton"
        android:choiceMode="multipleChoice" >

    </ListView>

</RelativeLayout>
